    <script language="javascript" type="text/javascript">
        $(document).ready(function () {
            $("#Data").mask("99/99/9999");
        });
    </script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Lancamento</legend>
        <div class="editor-label">
            Tipo de Pagamento
        </div>
